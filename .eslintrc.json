{
    "extends": [
        "eslint:recommended",
        "next"
    ],
    "rules": {
        "@next/next/no-img-element": "off",
        "jsx-a11y/alt-text": "off",
        "react/display-name": "off",
        "no-undef": "off",
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": [
            1,
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_",
                "caughtErrorsIgnorePattern": "^_"
            }
        ],
        "react/no-unknown-property": [
            "error",
            {
                "ignore": [
                    "css"
                ]
            }
        ]
    },
    "plugins": [
        "@typescript-eslint"
    ]
}
